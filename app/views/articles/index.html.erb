  <%= link_to(new_article_path) do %>
  <div style="
  background-image: url('http://www.iconarchive.com/download/i98291/dakirby309/simply-styled/File-Explorer.ico');
  background-repeat: no-repeat;
  background-position: center;
  background-size: 40px 40px;
  background-size: 40px 40px;
  width:50px;
  height: 50px;
  margin-bottom: 20px;
  position:relative;
  ">
</div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading"></div>
      <div class="panel-body">
        <div class="row"> 
          <% @articles.each do |article| %>
          <div class="col">
            <%= link_to(article) do %>
            <div class="desktop">
              <!-- <div class="icons-dekstop"> -->
                <div class="icon-desktop">
                  <img src="https://image.noelshack.com/fichiers/2018/18/6/1525513595-screenshot-5.png" alt="">
                  <span><%= article.title %></span>

                  <div style="display: flex;justify-content: space-around; width:100%">
                    <%= link_to(edit_article_path(article)) do %>
                      <%= content_tag(:i, "edit", class: "material-icons", style: "color:white; font-size:13px") %>
                    <% end %>


                    

                    <%= link_to article_path(article), :method => :delete do %>
                      <%= content_tag(:i, "close", class: "material-icons", style: "color:white; font-size:13px") %>
                    <% end %>
                    
                  </div>
                </div>
                <!-- </div> -->
              </div>

              









              <% end %>
            </div>
            <% end %>
          </div> 
        </div>
      </div>
    </div>
  </div>



  <style type="text/css">
    .desktop {
      display: flex;
    }
    .desktop .icon-desktop img {
      height: 48px;
      width: 48px;
    }

    .desktop .icon-desktop span {
      display: block;
      color: white;
      font-size: 11px;
